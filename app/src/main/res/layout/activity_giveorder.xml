<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/transparent2"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/action_bar_tittle_color"
        android:padding="16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <LinearLayout
            style="@style/order_list_lin"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/giveorder_icon_img"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/icon_user_default"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                >
                <TextView
                    android:id="@+id/giveorder_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/giveorder_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/giveorder_order_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/giveorder_phone_img"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@mipmap/ic_phone"
                />

        </LinearLayout>>
         <TextView
             android:id="@+id/giveorder_timedown_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/circle_orange"
             android:text="60"
             android:textSize="@dimen/sp20"
             android:gravity="center"
             android:layout_gravity="center_horizontal"
             />
        <LinearLayout
            style="@style/order_list_lin"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/giveorder_type_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="汽车打蜡"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp18"
                />
        </LinearLayout>

        <LinearLayout
            style="@style/order_list_lin"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_loc"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/giveorder_add_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="青岛市青大一路23号"
                android:textColor="@color/black"
                android:textSize="@dimen/sp18"
                />
        </LinearLayout>

        <LinearLayout
            style="@style/order_list_lin"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_time"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/giveorder_time_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="明天 8:00-10:00"
                android:textColor="@color/black"
                android:textSize="@dimen/sp18"
                />
            <TextView
                android:id="@+id/giveorder_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/sp18"
                />
        </LinearLayout>

        <LinearLayout
            style="@style/order_list_lin"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_car"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/giveorder_cartype_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="奥迪"
                android:textColor="@color/black"
                android:textSize="@dimen/sp18"
                />
        </LinearLayout>
        <LinearLayout
            style="@style/order_list_lin"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/giveorder_color_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp18"
                    />
                <TextView
                    android:id="@+id/giveorder_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp18"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            style="@style/order_list_lin"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/giveorder_remark_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/order_noremark"
                android:textColor="@color/black"
                android:textSize="@dimen/sp18"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="5dp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/giveorder_accept_btn"
                android:layout_width="10dp"
                android:layout_weight="1"
                style="@style/base_btn2"
                android:text="接单"
                />
            <Button
                android:id="@+id/giveorder_refuse_btn"
                android:layout_width="10dp"
                android:layout_weight="1"
                style="@style/base_btn2"
                android:text="拒单"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>