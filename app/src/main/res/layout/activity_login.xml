<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg2"
    >

    <View
        android:id="@+id/login_base_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        />
    <LinearLayout
        android:layout_above="@id/login_base_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        >
        <EditText
            style="@style/base_edit"
            android:id="@+id/login_name_txt"
            android:hint="@string/login_phone_hint"
            android:inputType="number"
            android:drawableLeft="@mipmap/ic_phone2"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginTop="2dp"
            />
        <LinearLayout
            style="@style/base_edit"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/login_pwd_txt"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:hint="@string/login_pwd_hint"
                android:drawableLeft="@mipmap/ic_pwd"
                android:inputType="textPassword"
                />
            <TextView
                android:id="@+id/login_forget_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码"
                android:textColor="@color/yellow01"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginTop="2dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/login_login_btn"
        android:layout_below="@id/login_base_view"
        style="@style/base_btn"
        android:text="@string/login"
        />

    <TextView
        android:id="@+id/login_register_txt"
        android:layout_below="@id/login_login_btn"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/sp16"
        android:text="@string/login_register"
        android:textColor="@color/white"
        />
</RelativeLayout>